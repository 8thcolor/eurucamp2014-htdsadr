- if @project.valid?
  :plain
    location.href = "#{edit_project_path(@project)}";
- else
  :plain
    $(".project-edit-errors").html("#{escape_javascript(render('errors'))}");
    $('.save-project-loader').gl-hide();
    $('.project-edit-container').show();
    $('.project-edit-content .btn-save').enableButton();
