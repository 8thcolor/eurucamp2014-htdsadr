= render 'nav'
%h3.page-title
  Editing page
  = render 'main_links'
= render 'form'

.pull-right
  - if @wiki.persisted? && can?(current_user, :admin_wiki, @project)
    = link_to project_wiki_path(@project, @wiki), data: { confirm: "Are you sure you want to delete this page?"}, method: :delete, class: "btn btn-small btn-remove" do
      Delete this page
